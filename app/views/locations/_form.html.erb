<%= form_tag search_path, :method => 'get', :class => "form-horizontal", :role => "form" do %>
  <%= render 'layouts/messages' %>
  <div class="form-group">
		<%= label :mcc, 'MCC', class: "col-xs-12 col-sm-4 control-label" %>
		<div class="col-xs-12 col-sm-8">
			<%= text_field_tag :mcc, params[:mcc], :class => 'form-control', :placeholder => 'MCC' %>
		</div>
	</div>
	<div class="form-group">
		<%= label :mnc, 'MNC', class: "col-xs-12 col-sm-4 control-label" %>
		<div class="col-xs-12 col-sm-8">
			<%= text_field_tag :mnc, params[:mnc], :class => 'form-control', :placeholder => 'MNC' %>
		</div>
	</div>
	<div class="form-group">
		<%= label :lac, 'LAC', class: "col-xs-12 col-sm-4 control-label" %>
		<div class="col-xs-12 col-sm-8">
			<%= text_field_tag :lac, params[:lac], :class => 'form-control', :placeholder => 'LAC' %>
		</div>
	</div>
	<div class="form-group">
		<%= label :cell_id, 'Cell Id', class: "col-xs-12 col-sm-4 control-label" %>
		<div class="col-xs-12 col-sm-8">
			<%= text_field_tag :cell_id, params[:cell_id], :class => 'form-control', :placeholder => 'Cell Id' %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12">
			<%= submit_tag "Search", :name => nil, :class => "btn btn-primary btn-block" %>
		</div>
	</div>
<% end %>
